<!--Video File Window-->
<div class="modal full fade dark" id="pvideo_viewer" tabindex="-1" role="dialog" aria-labelledby="pvideo_viewerLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="pvideo_viewerLabel"><i class="fa fa-map-marker"></i> &nbsp; Power Video Viewer</h4>
      </div>
      <div class="modal-body">
          <div class="row text-center">
            <div id="live_view" class="col-md-4"><h3>Live View : <span></span></h3><iframe></iframe></div>
            <div id="video_preview" class="col-md-4"><h3></h3><div class="holder"></div>
                <div class="btn-group"><a preview="stepBackBack" class="active btn btn-sm btn-primary"><i class="fa fa-fast-backward"></i></a> <a preview="stepBack" class="btn btn-sm btn-primary"><i class="fa fa-backward"></i></a> <a preview="play" class="btn btn-sm btn-default"><i class="fa fa-play"></i></a> <a preview="mute" class="btn btn-sm btn-default"><i class="fa fa-volume-up"></i></a> <a preview="stepFront" class="btn btn-sm btn-primary"><i class="fa fa-fast-forward"></i></a> <a preview="stepFrontFront" class="active btn btn-sm btn-primary"><i class="fa fa-forward"></i></a>
                </div>
                <div class="btn-group"><a download="" href="" class="btn btn-sm btn-default"><i class="fa fa-download"></i></a> <a video="download" host="dropbox" download="" href="" class="btn btn-sm btn-default"><i class="fa fa-dropbox"></i></a></div>
<!--                <a class="btn btn-sm btn-primary" video="launch" href=""><i class="fa fa-play-circle"></i> <span>No Video Selected</span></a>-->
                <div style="padding:20px 0">
                    <div class="col-md-8"><input type="text" id="pvideo_daterange" class="form-control text-center" value="" /></div>
                    <div class="col-md-4 text-center">
                        <label title="Show Events" class="mdl-switch mdl-js-switch mdl-js-ripple-effect" for="pvideo_show_events">
                          <input type="checkbox" id="pvideo_show_events" checked name="show_events" value="true" class="mdl-switch__input">
                            <span class="mdl-switch__label"></span>
                        </label>
                    </div>
                </div>
                <div class="msg"></div>
                <div class="temp hidden"></div>
              </div>
            <div id="vis_monitors" class="col-md-4"><ul class="btn-group-vertical"></ul></div>
          </div>
          <div class="row" style="position:relative">
              <div class="nodata super-center">No Data <div class="divider"></div><i class="fa fa-4x fa-area-chart"></i></div>
              <div id="vis_pwrvideo" class="col-md-12"></div>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>